<div class="container-fluid">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">CRUD Libros</h3>
    </div>
    <div class="panel-body">
      <button class="btn btn-success" data-toggle="modal" data-target="#myModal">Agregar nuevo Alumno</button>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Edad</th>
          <th>Promedio</th>
          <th>Estado</th>
          <th>Accion</th>
        </tr>
        </thead>
        <tbody>
        <% _.each(alumnos, function(alumno) { %>
        <tr >
          <td><%= alumno.nombre %></td>
          <td><%= alumno.apellido %></td>
          <td><%= alumno.edad %></td>
          <td><%= alumno.promedio %></td>
          <td><%= alumno.promedio < 4 ? 'Reprobado' : 'Aprobado' %></td>
          <td>
          <button
          data-promedio=<%= alumno.promedio %>
          data-id=<%= alumno.id %>
          data-target="#promedioModal"
          class="btn btn-success announce"
          >
            Cambiar Promedio
          </button>
            <a class="btn btn-danger eliminar" data-id="<%=alumno.id%>">Eliminar</a>
          </td>
        </tr>
        <% }) %>
        </tbody>
      </table>
    </div>
  </div>



  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Agregar nuevo Alumno</h4>
        </div>
        <div class="modal-body">
          <form method="POST" id="formulario" action="">
            <div class="form-group">
              <label>Nombre</label>
              <input type="text" class="form-control" name="nombre" required="required">
            </div>
            <div class="form-group">
              <label>Apellido</label>
              <input type="text" class="form-control" name="apellido" required="required">
            </div>
            <div class="form-group">
              <label>Edad</label>
              <input type="number"  min="0" step="1" class="form-control" name="edad" required="required">
            </div>
            <div class="form-group">
              <label>Promedio</label>
              <input type="number"  min="1.0" max="7.0" step="0.1" class="form-control" name="promedio" required="required">
            </div>
            <input id="submit" type="submit" class="btn btn-default btn-primary" name="agregar">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div id="promedioModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Editar Promedio</h4>
        </div>
        <div class="modal-body">
          <form method="POST" id="promedioForm" action="">
            <div class="form-group">
              <label>Promedio</label>
              <input type="number"  min="1.0" max="7.0" step="0.1" id="promedioEditar" class="form-control" name="promedio" required="required">
              <input type="hidden" id="idEditar">
            </div>
            <input id="editarPromedio" type="submit" class="btn btn-default btn-primary" name="Guardar">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
